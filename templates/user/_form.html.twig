            <input class="form-control" type="password" id="user_password_second" name="user[password][second]" required="required"/>
        </div>
        <input type="hidden" id="user__token" name="user[_token]" value="nfe5XbMF10nc2osoG62KmvNHTqLF8VWkIBBd1A2b_6I"/>
    </div>
    </div>
    <button class="btn btn-outline-primary">{{ button_label|default('Save') }}</button>
    {{ form_row(form._token) }}
</form>
{% endif %}
